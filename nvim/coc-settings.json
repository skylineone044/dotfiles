{
    "coc.preferences.extensionUpdateCheck": "daily",
    "diagnostic.displayByAle": true,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.virtualText": true,
    "diagnostic.enableHighlightLineNumber": true,
    "diagnostic.refreshOnInsertMode": true,
    "diagnostic.separateRelatedInformationAsDiagnostics": true,
    "diagnostic.enableMessage": "always",
    "diagnostic.enableSign": true,
    "python.pythonPath": "/usr/bin/python",
    "python.jediPath": "/usr/lib/python3.8/site-packages",
    "python.jediEnabled": true,
    "python.formatting.provider": "black",
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.formatting.blackArgs": ["--line-length", "80"],
    "suggest.autoTrigger": "always",
    "python.autoComplete.addBrackets": true,
    "suggest.noselect": false,
    "suggest.triggerAfterInsertEnter": true,
    "python.linting.pep8Enabled": true,
    "lua.commandPath": "/usr/bin/lua-lsp",
    "lua.enable": true,
    "clangd.semanticHighlighting": true,
    "yank.highlight.duration": 1000,
    "snippets.ultisnips.directories": [
        "UltiSnips", 
        "~/.config/nvim/plugins/vim-snippets/UltiSnips",
        "~/.config/nvim/plugins/vim-unicode-snippets/UltiSnips"
    ],
    "explorer.width": 30,
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": false,
    "explorer.keyMappings.global": {
        "<cr>": [
            "expandable?",
            [
                "expanded?",
                "collapse",
                "expand"
            ],
            "open"
        ],
        "v": "open:vsplit"
    }
}
