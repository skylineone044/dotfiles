{
    "coc.preferences.extensionUpdateCheck": "daily",
    "diagnostic.displayByAle": true,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.virtualText": true,
    "diagnostic.enableHighlightLineNumber": true,
    "diagnostic.refreshOnInsertMode": true,
    "diagnostic.separateRelatedInformationAsDiagnostics": true,
    "diagnostic.enableMessage": "always",
    "diagnostic.enableSign": true,
    "python.pythonPath": "/usr/bin/python",
    "pyright.enable": true,
    "python.linting.enabled": true,
    "python.formatting.provider": "black",
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": false,
    "python.formatting.blackArgs": ["--line-length", "79"],
    "suggest.autoTrigger": "always",
    "suggest.noselect": false,
    "suggest.triggerAfterInsertEnter": true,
    "lua.enable": true,
    "java.home": "/usr/lib/jvm/java-17-openjdk",
    "java.completion.overwrite": true,
    "java.completion.enabled": true,
    "java.foldingRange.enabled": true,
    "java.format.onType.enabled": true,
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-1.8",
            "path": "/usr/lib/jvm/java-8-openjdk"
        },
        {
            "name": "JavaSE-11",
            "path": "/usr/lib/jvm/java-11-openjdk"
        },
        {
            "name": "JavaSE-17",
            "path": "/usr/lib/jvm/java-17-openjdk",
            "default": true
        }
    ],
    "java.saveActions.organizeImports": false,
    "java.format.onType.fixComment.enabled": true,
    "yank.highlight.duration": 1000,
    "snippets.ultisnips.directories": [
        "UltiSnips",
        "~/.config/nvim/plugins/vim-snippets/UltiSnips",
        "~/.config/nvim/plugins/vim-unicode-snippets/UltiSnips"
    ],
    "explorer.width": 30,
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": false,
    "explorer.keyMappings.global": {
        "<cr>": [
            "expandable?",
            [
                "expanded?",
                "collapse",
                "expand"
            ],
            "open"
        ],
        "v": "open:vsplit"
    }
}
